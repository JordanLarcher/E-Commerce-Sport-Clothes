@model IEnumerable<Gym_Clothes_ECommerce.Web.Models.UserViewModel>

<h2>Users</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Add User</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>
