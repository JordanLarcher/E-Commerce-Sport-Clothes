@model IEnumerable<Gym_Clothes_ECommerce.Web.Models.OrderViewModel>

<h2>Orders</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Add Order</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>@order.OrderDate</td>
            </tr>
        }
    </tbody>
</table>
