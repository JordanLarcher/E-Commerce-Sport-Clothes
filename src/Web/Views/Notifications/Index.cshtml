@model IEnumerable<Gym_Clothes_ECommerce.Web.Models.NotificationViewModel>

<h2>Notifications</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Add Notification</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Message</th>
            <th>User ID</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr>
                <td>@notification.Id</td>
                <td>@notification.Message</td>
                <td>@notification.UserId</td>
                <td>@notification.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>
