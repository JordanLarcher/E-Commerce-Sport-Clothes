@model IEnumerable<Gym_Clothes_ECommerce.Web.Models.PaymentViewModel>

<h2>Payments</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Add Payment</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Order ID</th>
            <th>Amount</th>
            <th>Payment Method</th>
            <th>Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.Id</td>
                <td>@payment.OrderId</td>
                <td>@payment.Amount</td>
                <td>@payment.PaymentMethod</td>
                <td>@payment.PaymentDate</td>
            </tr>
        }
    </tbody>
</table>
